/* miniprogram/pages/mine/mine.wxss */
page {
  background-color: #f8f8f8;
}



#logintintwrap {
  color: #fff;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  width: 750rpx;
}

#logintint {
  text-align: center;
  margin: 0 auto;
  position: relative;
}

#mineBg {
  background: #30c17b;
  width: 100%;
  height: 220rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  left: 30rpx;
  top: 30rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  position: absolute;
  top: 10rpx;
  left: 0rpx;
}

.userinfo-point {
  position: absolute;
  bottom: 10rpx;
  left: 0rpx;
  font-size: 10pt;
}
.userinfo-grade {
  position: absolute;
  bottom: 10rpx;
  left: 150rpx;
  font-size: 10pt;
}
.userinfo-gender {
  position: absolute;
  bottom: 10rpx;
  left: 300rpx;
  font-size: 10pt;
}
.userinfo-text {
  position: relative;
  margin: 20rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 128rpx;
  width: 600rpx;
}

.buttonList {
  margin-top: 30rpx;
  background-color: #fff;
  line-height: 2.51;
  border-bottom: 1px solid #d9d9d9;
  border-top: 1px solid #d9d9d9;
  color: #353535;
  position: relative;
}

.operation:first-child::before {
  display: none;
}

.operation::before {
  content: " ";
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #d9d9d9;
  color: #d9d9d9;
  position: absolute;
}

.operation {
  position: relative;
  height: 100rpx;
  vertical-align: bottom;
}

.imageview{
  display: inline-block;
  width: 50rpx; 
  height: 50rpx; 
  background-color: #fff;
  margin-left: 20rpx;
  margin-right: 5rpx;
  vertical-align: middle;
}
